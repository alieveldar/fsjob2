<h1>Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Repeat</th>
      <th colspan="3">Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |e| %>
    <tr>
      <td><%= e.title %></td>
      <td><%= e.description %></td>
      <td><%= e.start %></td>
      <td><%= e.repeat %></td>
      <td><%= link_to 'Show', event_path(e.id) %></td>        
    </tr>
    <% end %>
  </tbody>
</table>