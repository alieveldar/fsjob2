<h1>My events</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Type of repeat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |e| %>
      <tr>
        <td><%= e.title %></td>
        <td><%= e.description %></td>
        <td><%= e.start %></td>
        <td><%= e.repeat %></td>
        <td><%= link_to 'Show', event_path(e.id), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', root_path, class: 'btn btn-primary' %>


